<Window x:Class="EmployeeManagementSystem1.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="275" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Grid>
        <TextBlock Text="Username:" HorizontalAlignment="Left" Margin="50,50,0,0"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="150,50,0,57" Width="180"/>

        <TextBlock Text="Password:" HorizontalAlignment="Left" Margin="50,100,0,0"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="150,92,0,141" Width="180"/>

        <Button Content="Login" Height="30" Margin="183,168,101,77"
                Click="BtnLogin_Click"/>
    </Grid>
</Window>
